# OpenSight Pro - Environment Variables
# Copy this file to .env and update with your values

# Application
ENVIRONMENT=development
DEBUG=true

# Streamlit
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=false
STREAMLIT_SERVER_ENABLEXSRFPROTECTION=true

# Database
DATABASE_URL=sqlite:///./data.db
# For PostgreSQL: postgresql://user:password@localhost:5432/opensight

# API (if using FastAPI backend)
API_URL=http://localhost:8000
API_KEY=your-api-key-here

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# File Upload
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
UPLOAD_FOLDER=./uploads

# Features
ENABLE_REPORTS=true
ENABLE_FORECASTING=true
ENABLE_ML_MODELS=true

# Email (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@opensight.pro

# Third-party APIs
STRIPE_API_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Analytics
ANALYTICS_ENABLED=false
ANALYTICS_TOKEN=your-token-here
